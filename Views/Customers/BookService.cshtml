@model  Order
@{
    ViewData["Title"] = "BookService";
    Layout = "_Layout";
}

<h1>Book your Date, Time, and Service</h1>

@*date*@
<div class="form-group row">
    <label for="example-date-input" class="col-2 col-form-label">Date</label>
    <div class="col-10">
        <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
    </div>
</div>
@*time*@
<div class="form-group row">
    
    <label for="example-time-input" class="col-2 col-form-label">Time</label>
    <div class="col-10">
        <input class="form-control" type="time" value="" id="example-time-input">
    </div>
</div>
@*services*@
<div class="form-check">
    <h2>Services Available</h2>
    <input class="form-check-input" type="checkbox" value="Oil Change" id="defaultCheck1">
    <label class="form-check-label" asp-for="Services">
        Oil Change
    </label>
</div>
<div class="form-check">
    <input class="form-check-input" type="checkbox" value="Transmission Fluid" id="defaultCheck1">
    <label class="form-check-label" asp-for="Services">
        Transmission Fluid
    </label>
</div>
<div class="form-check">
    <input class="form-check-input" type="checkbox" value="Brakes" id="defaultCheck1">
    <label class="form-check-label" asp-for="Services">
        Brakes
    </label>
</div>

